@using LionHeart.Web.Models.Product
@model SearchProductsViewModel
@{
    ViewBag.Title = "Поиск товаров";
}

@if (Model is not null && Model.Page is not null)
{
    <form method="post" asp-action="SearchProducts">
        <input hidden asp-for="SearchedValue" value="@Model.SearchedValue" />
        <vc:list-products page="@Model.Page" use-buttons-for-page="true"></vc:list-products>
    </form>
}
else
{
    <div class="site-body-container">
        <div style="height: 300px;"></div>
        <div class="d-flex justify-content-center">
            <form method="post" asp-action="SearchProducts" class="d-flex gap-2">
                <input asp-for="SearchedValue" type="text" class="form-control custom-input p-4 mt-1" placeholder="Введите названия продукта" style="width:500px;">
                <button class="btn btn-grad w-25">Найти</button>
            </form>
        </div>
        <div class="d-flex justify-content-center">
            <div asp-validation-summary="All" class="text-danger pt-2" style="width: 600px;"></div>
        </div>
    </div>
}