@using LionHeart.Web.Models.Feedbacks
@model ListFeedbacksViewModel

<div id="feedbacks" class="card">
    <div class="card-header">
        <p>Отзывы</p>
    </div>
    @foreach (var feedback in Model.Feedbacks)
    {
        <div class="card-body">
            <div class="card">
                <div class="card-header" style="background-color:#930667; color:white; ">
                    <div class="d-flex justify-content-start align-items-center">
                        <div class="p-3">@feedback.FirstName</div>
                        <div>
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < feedback.Rating)
                                {
                                    <label style="color: yellow">★</label>
                                }
                                else
                                {
                                    <label>★</label>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-0">
                        <p>@feedback.Content</p>
                        <footer class="blockquote-footer fst-italic mt-1">@feedback.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")</footer>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="card-footer">
        @if (Model.HasPreviousPage)
        {
            <button id="list-previous-feedbacks" class="custom-btn-link btn">Назад</button>
        }
        @if (Model.HasNextPage)
        {
            <button id="list-next-feedbacks" class="custom-btn-link btn">Вперед</button>
        }
    </div>
</div>
<script>
    setupContentLoader('#list-previous-feedbacks', '#feedbacks', '/Feedbacks/ListFeedbacks?productId=@Model.ProductId&pageNumber=@(Model.PageNumber - 1)');
    setupContentLoader('#list-next-feedbacks', '#feedbacks', '/Feedbacks/ListFeedbacks?productId=@Model.ProductId&pageNumber=@(Model.PageNumber + 1)');
</script>
