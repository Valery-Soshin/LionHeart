@using LionHeart.Web.Models.Error
@model InformationViewModel

@{
    ViewData["Title"] = "Сообщение";
}

<div class="d-flex justify-content-center m-5 p-5">
    <div>
        <div class="text-center main-color" style="font-size: 150px">⊝</div>
        @foreach (var message in Model.Messages)
        {
            <div>@message</div>
        }
        <br />
        @if (Model.ReturnUrl is not null)
        {
            <div class="text-center">
                <a href="@Model.ReturnUrl" class="btn custom-btn-link">Вернуться</a>
            </div>
        }
    </div>
</div>