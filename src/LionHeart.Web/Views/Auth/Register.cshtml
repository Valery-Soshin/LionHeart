@model RegisterViewModel

<main style="height:900px">
    <div class="position-relative" style="height: 700px">
        <form asp-action="Register" method="post" class="position-absolute top-50 start-50 translate-middle w-25" style="max-width:350px">
            <h2 class="mb-5" style="text-align:center;">Регистрация</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col">
                <label class="form-label">Имя</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Имя">
            </div>
            <div class="col">
                <br />
                <label class="form-label">Фамилия</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Фамилия">
            </div>
            <div>
                <br />
                <label class="form-label">Почта</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Почта">
            </div>
            <div>
                <br />
                <label class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
            </div>
            <div>
                <br />
                <div class="form-check">
                    <input asp-for="RemeberMe" class="form-check-input" type="checkbox">
                    <label class="form-check-label">
                        Запомнить меня
                    </label>
                </div>
            </div>
            <div>
                <br />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark custom-button">Зарегистрироваться</button>
                    <button asp-action="Login" class="btn btn-dark custom-button">Отменить</button>
                </div>
            </div>
        </form>
    </div>
</main>



