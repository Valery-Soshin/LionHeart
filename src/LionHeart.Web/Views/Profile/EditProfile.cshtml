@model EditProfileViewModel

@{
    ViewBag.Title = "Изменение профиля";
}

<form method="post" class="m-3">
    <input asp-for="Id" hidden value="@Model.Id" />
    <div class="mb-3 row">
        <div class="col-2 text-center">
            <img src="https://ui-avatars.com/api/?size=128&background=930667&color=CCCCFF&name=@Model.FirstName + @Model.LastName" class="img-thumbnail" style="border-radius: 25px;">
        </div>
        <div class="col-10 d-flex align-items-center ">
            <div class="w-100">
                <label for="inputEmail" class="form-label p-0">Почта</label>
                <input asp-for="Email" type="text" class="form-control custom-input" id="inputEmail" value="@Model.Email">
            </div>
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputFirstName" class="col-sm-2 col-form-label p-0">Имя</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" type="text" class="form-control custom-input" id="inputFirstName" value="@Model.FirstName" />
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputLastName" class="col-sm-2 col-form-label p-0">Фамилия</label>
        <div class="col-sm-10">
            <input asp-for="LastName" type="text" class="form-control custom-input" id="inputLastName" value="@Model.LastName">
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputPhoneNumber" class="col-sm-2 col-form-label p-0">Телефон</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" type="text" class="form-control custom-input" id="inputPhoneNumber" value="@Model.PhoneNumber">
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputCurrentPassword" class="col-sm-2 col-form-label p-0">Текущий пароль</label>
        <div class="col-sm-10">
            <input asp-for="CurrentPassword" type="password" class="form-control custom-input" id="inputCurrentPassword" />
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputPassword" class="col-sm-2 col-form-label p-0">Пароль</label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control custom-input" id="inputPassword" />
        </div>
    </div>
    <div class="mb-3 row text-center align-items-center">
        <label for="inputConfirmPassword" class="col-sm-2 col-form-label p-0">Пароль повторно</label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" type="password" class="form-control custom-input" id="inputConfirmPassword">
        </div>
    </div>
    <div class="m-5 row">
        <div class="d-flex justify-content-end text-end">
            <button asp-action="EditProfile" class="btn btn-grad w-25">Сохранить</button>
        </div>
    </div>
</form>