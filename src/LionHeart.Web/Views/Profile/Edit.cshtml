@using LionHeart.Web.Models.Profile
@using LionHeart.Core.Models
@model EditViewModel

@{
    var user = ViewBag.User;
    var showModal = ViewBag.ShowModal;
}

<input id="show-modal" value="@showModal" hidden />

<button id="show-modal-button" type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal" hidden>
    Launch demo modal
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Ошибки ввода</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark w-25" data-bs-toggle="modal" data-bs-target="#exampleModal">Ок</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
   <div class="card m-5">
        <div class="card-header">
            <div class="row">
                <div class="col d-flex justify-content-start gap-3">
                    <a href="#" class="link-dark">Избранное</a>
                    <a href="#" class="link-dark">Покупки</a>
                    <a href="#" class="link-dark">Уведомления</a>
                </div>
                <div class="col text-end">
                   <label>Ваша скидка составляет: @user.PersonalDiscount %</label>
               </div>
            </div>
        </div>
       <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="card border-0">
                        <img src="/images/base-profile-img.png" class="img-thumbnail" style="border-radius: 25px">
                    </div>
                </div>
                <div class="col-8">
                    <div class="card">
                        <form method="post" class="m-3">
                            <input asp-for="Id" hidden value="@user.Id"/>

                            <div class="mb-3 row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Почта</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" type="text" class="form-control" id="inputEmail" value="@user.Email">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputFirstName" class="col-sm-2 col-form-label">Имя</label>
                                <div class="col-sm-10">
                                    <input asp-for="FirstName" type="text" class="form-control" id="inputFirstName" value="@user.FirstName"/>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputLastName" class="col-sm-2 col-form-label">Фамилия</label>
                                <div class="col-sm-10">
                                    <input asp-for="LastName" type="text" class="form-control" id="inputLastName" value="@user.LastName">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputPhoneNumber" class="col-sm-2 col-form-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input asp-for="PhoneNumber" type="text" class="form-control" id="inputPhoneNumber" value="@user.PhoneNumber">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputCurrentPassword" class="col-sm-2 col-form-label">Текущий пароль</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" class="form-control" id="inputCurrentPassword" />
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputPassword" class="col-sm-2 col-form-label">Пароль</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" class="form-control" id="inputPassword" />
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputConfirmPassword" class="col-sm-2 col-form-label">Пароль повторно</label>
                                <div class="col-sm-10">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputConfirmPassword">
                                </div>
                            </div>

                            <div class="m-5 row w-25">
                                <button asp-action="Edit" type="submit" class="btn btn-dark">
                                    Сохранить
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
       </div>
   </div>
</div>



<script>
    window.onload = function () {
        const show = document.getElementById("show-modal").value;
        if (show === "true") {
            document.getElementById("show-modal-button").click();
        }
    }
</script>