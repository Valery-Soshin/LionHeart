@using LionHeart.Web.Models.Profile
@using LionHeart.Core.Models
@model EditViewModel

@{
    var user = ViewBag.User;
    var showModal = ViewBag.ShowModal;
}

<input id="show-modal" value="@showModal" hidden />

<button id="show-modal-button" type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal" hidden>
    Launch demo modal
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Ошибки ввода</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark w-25" data-bs-toggle="modal" data-bs-target="#exampleModal">Ок</button>
            </div>
        </div>
    </div>
</div>

<div class="site-body-container main-color">
    <div class="card">
        <div class="card-header" style="background-color:#930667">
            <div class="row">
                <div class="col d-flex justify-content-start gap-3">
                    <a asp-action="Index" asp-controller="Profile" class="nav-link site-nav-item">Избранное</a>
                    <a asp-action="Index" asp-controller="Profile" class="nav-link site-nav-item">Покупки</a>
                    <a asp-action="Index" asp-controller="Profile" class="nav-link site-nav-item">Уведомления</a>
                </div>
                <div class="col d-flex justify-content-end align-items-center" style="color: white;">
                    <label>Ваша скидка составляет: @user.PersonalDiscount %</label>
                </div>
            </div>
        </div>
        <div class="card-body bg-light">
            <div class="row">
                <div>
                    <div class="card p-3 border-0  bg-light">
                        <form method="post" class="m-3">
                            <input asp-for="Id" hidden value="@user.Id" />
                            <div class="mb-3 row">
                                <div class="col-2 text-center">
                                    <img src="https://ui-avatars.com/api/?size=128&background=930667&color=CCCCFF&name=@user.FirstName + @user.LastName" class="img-thumbnail" style="border-radius: 25px;">
                                </div>
                                <div class="col-10 d-flex align-items-center ">
                                    <div class="w-100">
                                        <label for="inputEmail" class="form-label p-0">Почта</label>
                                        <input asp-for="Email" type="text" class="form-control custom-input" id="inputEmail" value="@user.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputFirstName" class="col-sm-2 col-form-label p-0">Имя</label>
                                <div class="col-sm-10">
                                    <input asp-for="FirstName" type="text" class="form-control custom-input" id="inputFirstName" value="@user.FirstName" />
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputLastName" class="col-sm-2 col-form-label p-0">Фамилия</label>
                                <div class="col-sm-10">
                                    <input asp-for="LastName" type="text" class="form-control custom-input" id="inputLastName" value="@user.LastName">
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputPhoneNumber" class="col-sm-2 col-form-label p-0">Телефон</label>
                                <div class="col-sm-10">
                                    <input asp-for="PhoneNumber" type="text" class="form-control custom-input" id="inputPhoneNumber" value="@user.PhoneNumber">
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputCurrentPassword" class="col-sm-2 col-form-label p-0">Текущий пароль</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" class="form-control custom-input" id="inputCurrentPassword" />
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputPassword" class="col-sm-2 col-form-label p-0">Пароль</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" class="form-control custom-input" id="inputPassword" />
                                </div>
                            </div>
                            <div class="mb-3 row text-center align-items-center">
                                <label for="inputConfirmPassword" class="col-sm-2 col-form-label p-0">Пароль повторно</label>
                                <div class="col-sm-10">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control custom-input" id="inputConfirmPassword">
                                </div>
                            </div>
                            <div class="m-5 row">
                                <div class="d-flex justify-content-end text-end">
                                    <button asp-action="Edit" type="submit" class="btn btn-grad w-25">
                                        Сохранить
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    window.onload = function () {
        const show = document.getElementById("show-modal").value;
        if (show === "true") {
            document.getElementById("show-modal-button").click();
        }
    }
</script>