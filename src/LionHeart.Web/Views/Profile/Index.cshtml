@using LionHeart.Web.Models.Profile;
@model User

<div class="container">
    <div class="card m-5">
        <div class="card-header">
            <div class="row">
                <div class="col d-flex justify-content-start gap-3">
                    <a href="#" class="link-dark">Избранное</a>
                    <a href="#" class="link-dark">Покупки</a>
                    <a href="#" class="link-dark">Уведомления</a>
                </div>
                <div class="col text-end">
                    <label>Ваша скидка составляет: @Model.PersonalDiscount %</label>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="card">
                        <img src="/images/base-profile-img.png" class="img-thumbnail" style="border-radius: 25px">
                    </div>
                </div>
                <div class="col-8">
                    <div class="card">
                        <form class="m-3">

                            <div class="mb-3 row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Почта</label>
                                <div class="col-sm-10">
                                    <input type="email" readonly class="form-control" id="inputEmail" value="@Model.Email">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputFirstName" class="col-sm-2 col-form-label">Имя</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control" id="inputFirstName" value="@Model.FirstName">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputLastName" class="col-sm-2 col-form-label">Фамилия</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control" id="inputLastName" value="@Model.LastName">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="inputPhoneNumber" class="col-sm-2 col-form-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control" id="inputPhoneNumber" value="@Model.PhoneNumber">
                                </div>
                            </div>

                            <div class="m-5 row w-25">
                                <a asp-action="Edit" asp-route-userId="@Model.Id" class="btn btn-dark">
                                    Изменить
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>