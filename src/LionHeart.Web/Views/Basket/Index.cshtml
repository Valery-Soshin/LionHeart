@using LionHeart.Web.Models.Basket
@model Basket;

<div class="container">
    @if (Model.Products.Any())
    {
        <form class="row m-5" id="basket" method="post" asp-action="CreateOrder" asp-controller="Orders">
            <input hidden asp-for="Id" id="id-basket" value="@Model.Id" />
            <input hidden asp-for="CustomerId" id="customer-id-basket" value="@Model.CustomerId" />
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Корзина</h3>
                    </div>
                    <div class="card-body" id="card-body">
                        @for(int i = 0; i < Model.Products.Count; i++)
                        {
                            var product = @Model.Products[i];

                            <div class="row d-flex justify-content-center align-items-center text-center">
                                <input hidden asp-for="Products[i].Id" id="id-@product.Id" value="@product.Id" />
                                <input hidden asp-for="Products[i].ProductId" id="product-id-@product.Id" value="@product.ProductId" />
                                <input hidden asp-for="Products[i].CustomerId" id="customer-id-@product.Id" value="@product.CustomerId" />

                                <div class="col-2">
                                    <img src="/images/img1.jpg" class="img-thumbnail" style="width: 150px; border-radius: 25px">
                                </div>

                                <div class="col-4">
                                    <label id="label-info-name-@product.Id">@product.Information.Name</label>
                                    <input hidden asp-for="Products[i].Information.Name" id="input-info-name-@product.Id" value="@product.Information.Name" />
                                </div>

                                <div class="col-3 d-flex justify-content-center align-items-center text-center">
                                    <a class="btn btn-dark custom-btn" style="width: 40px; height: 40px;" onclick="subtract('@product.ProductId', '@product.Information.Price')">-</a>

                                    <label id="label-quantity-@product.Id" class="border-0 text-center" style="width: 40px; height: 40px; line-height:40px">@product.Quantity</label>
                                    <input hidden asp-for="Products[i].Quantity" id="input-quantity-@product.Id" value="@product.Quantity" />

                                    <a class="btn btn-dark custom-btn" style="width: 40px; height: 40px;" onclick="add('@product.ProductId', '@product.Information.Price')">+</a>
                                </div>

                                <div class="col-3 d-flex justify-content-end">
                                    @{
                                        var price = (product.Information.Price * product.Quantity).ToString().Replace(",", ".");
                                    }
                                    <label id="lable-price-@product.Id" class="border-0 text-center bg-white" style="width: 80px; height: 40px; line-height:40px; border-bottom: 1px solid lightgray">@price</label>
                                    <input hidden asp-for="Products[i].Information.Price" id="input-total-price-@product.Id" value="@price" />
                                </div>
                            </div>
                            <br />
                        }
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        Итого:
                    </div>
                    <div class="card-body">
                        <div>
                            <div>
                                Товаров: @Model.Products.Count
                            </div>
                            <div>
                                Стоимость всего:
                                <label id="label-total-price-basket">@Model.TotalPrice</label>
                                <input hidden asp-for="TotalPrice" id="input-total-price" value="@Model.TotalPrice" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-dark custom-btn">Заказать</button>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="row m-5 text-center">
            <div>
                <h3>В корзине пока пусто</h3>
            </div>
            <div>
                <p>Загляните на главную, чтобы выбрать товары или найдите нужное в поиске</p>
            </div>
            <div>
                <a asp-action="Index" asp-controller="Products" class="btn btn-dark">Перейти на главную</a>
            </div>
        </div>
    }
</div>
<script>
    async function add(productId, basePrice) {
        var counter = document.getElementById('quantity-' + productId);
        var price = document.getElementById('price-' + productId);

        counter.value = +counter.value + 1;
        price.value = (parseFloat(price.value) + parseFloat(basePrice)).toFixed(1);

        await updateProductQuantity(productId, counter.value);

        await process();
    };

    async function subtract(productId, basePrice) {
        var counter = document.getElementById('quantity-' + productId);
        var price = document.getElementById('price-' + productId);

        if (+counter.value >= 2) {
            counter.value = counter.value - 1;
            price.value = (parseFloat(price.value) - parseFloat(basePrice)).toFixed(1);

            await updateProductQuantity(productId, counter.value);

            await process();
        }
    };

    async function updateProductQuantity(id, quantity) {
        await fetch("/Basket/UpdateProductQuantity", {
            method: "POST",
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                productid: id,
                productquantity: quantity
            })
        });
    };

    async function process() {
        document.getElementById('total-price-button').click();
    };
</script>

